<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0D3D4"
    tools:context=".DisplayPhrases">

    <TextView
        android:id="@+id/invisible_text"
        android:layout_width="126dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/mainHeading_04"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/invisible_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-101dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/phrases_and_words"
        android:textAllCaps="true"
        android:textColor="#1ABC9C"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="jelly_bean" />

    <ListView
        android:id="@+id/lv_phrasesList"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_alignBottom="@id/mainHeading_04"
        android:layout_marginBottom="-457dp"
        android:textSize="20sp" />

</RelativeLayout>